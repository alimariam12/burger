<h1>BURGER APP!</h1>


<section class="container">
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">ADD A BURGER TO EAT</h5>
         <form class="create-form">

            <div class="form-group">
              <label for="nb">Burger Name:</label>
              <input type="text" id="nb" name="name">
                          <button type="submit" class="btn btn-warning">Add Burger! <i class="fas fa-utensils"></i></button>

            </div>
          </form>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">TIME TO DEVOUR YOUR BURGER!</h5>
            
            <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            {{> burgers/burger-block}}
            {{/unless}}
            {{/each}}
          </ul>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/devourBurger}}
            {{/if}}
            {{/each}}
          </ul>
      </div>
    </div>
  </div>
</div>
</section>